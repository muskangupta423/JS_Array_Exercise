<body>
    <script>
        var array1 = [1,0,2,3,4];
        var array2 = [3,5,6,7,8,13];
        var result=[]
        var n=Math.min(array1.length,array2.length)

        for(let x=0;x<n;x++)
        {
            result.push(array1[x]+array2[x])
        }
        if(array1.length>n)
        {
            for(let x=n;x<array1.length;x++)
                {
                    result.push(array1[x])
                }
        }
        if(array2.length>n)
        {
            for(let x=n;x<array2.length;x++)
                {
                    result.push(array2[x])
                }
        }
        console.log(result)
    </script>
</body>
