    <script>
        var arr_length=6
        var value=2
    function array_filled(arr_length, value){
        var arr=[]
        for(let x=0;x<arr_length;x++)
            arr.push(value)
        return arr
}

console.log(array_filled(arr_length, value));

    </script>
