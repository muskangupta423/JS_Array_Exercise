    <script>
        var arr=[1,2,3,4,5,6]
        var n=5
    function remove_array_element(array, n)
 {
   var index = array.indexOf(n);
   if (index > -1) {
    array.splice(index, 1);
}
   return array;
 }

console.log(remove_array_element(arr, n));

    </script>
