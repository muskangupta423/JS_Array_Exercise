    <script>
        var arr=[1,23,65,12,11,8,6]
        var n=2
    function nthlargest(arr, n){
        arr=arr.sort(function(a,b){return b-a})
        return arr[n-1]

}

console.log(nthlargest(arr, n));

    </script>
