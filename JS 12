    <p id="demo"></p>
    <script>
        var arr=[0,1,2,3,4]
        var sum=0,product=1
        for(var i in arr)
        {
            sum+=i
            product*=i
        }
        document.getElementById("demo").innerHTML=sum+" " +product
    </script>


