    <p id="demo"></p>
    <script>
        var arr=[10,20,30,40,50]
        var from_pos=0
        var at_pos=2
    function array_move(arr,from_pos,at_pos){
        var element=arr[from_pos]
        arr.splice(from_pos,1)
        arr.splice(at_pos,0,element)
        return arr
}

console.log(array_move(arr, from_pos,at_pos));

    </script>
